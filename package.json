{
  "name": "task-manager-kanban",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "echo \"Use: npm --workspace apps/server run start:dev & npm --workspace apps/client run dev\"",
    "build": "echo \"Use: npm --workspace apps/server run build && npm --workspace apps/client run build\"",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx && stylelint \"**/*.{css,scss}\"",
    "format": "prettier -w .",
    "prepare": "husky"
  },
  "devDependencies": {
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "typescript": "^5.5.3"
  }
}
